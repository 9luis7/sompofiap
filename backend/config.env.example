# Configurações do Servidor
NODE_ENV=development
PORT=3001
HOST=localhost

# Banco de Dados PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sompo_monitoring
DB_USER=sompo_user
DB_PASSWORD=sompo_password
DB_SSL=false

# JWT (Autenticação)
JWT_SECRET=sua-chave-secreta-super-segura-aqui-chave-de-256-bits
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=sua-chave-de-refresh-token-diferente-da-principal
JWT_REFRESH_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=http://localhost:3000

# Logs
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Email (para notificações - opcional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu-email@gmail.com
SMTP_PASS=sua-senha-de-app

# MQTT (para dispositivos IoT - opcional)
MQTT_BROKER_URL=mqtt://localhost:1883
MQTT_USERNAME=
MQTT_PASSWORD=

# Configurações de Segurança
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cache (Redis - opcional)
CACHE_TTL=3600
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# APIs Externas (opcionais)
MAPBOX_ACCESS_TOKEN=
OPENROUTESERVICE_API_KEY=

# Weather API Configuration
WEATHER_API_KEY=your_openweathermap_api_key
WEATHER_API_ENABLED=true
WEATHER_CACHE_DURATION=1800000