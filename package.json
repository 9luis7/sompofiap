{
  "name": "sompo-monitoring-system",
  "version": "1.0.0",
  "description": "Sistema de Monitoramento de Cargas - Sompo Seguros",
  "main": "server.js",
  "scripts": {
    "frontend": "npx http-server frontend -p 3000 -a 127.0.0.1 -o",
    "backend": "node backend/dist/server.js",
    "backend:dev": "nodemon backend/src/server.ts",
    "build:backend": "cd backend && npm run build",
    "dev:all": "concurrently \"npm run backend\" \"npm run frontend\"",
    "lint": "npm run lint:js && npm run lint:css && npm run lint:html && npm run lint:py",
    "lint:js": "eslint frontend/modern-app.js frontend/config.js --fix",
    "lint:css": "stylelint frontend/**/*.css --fix",
    "lint:html": "htmlhint frontend/**/*.html",
    "lint:py": "python -m flake8 *.py --max-line-length=100 --max-complexity=10",
    "format": "prettier --write \"frontend/**/*.{js,css,html}\" && npm run format:py",
    "format:py": "python -m black *.py --line-length=100 && python -m isort *.py --profile=black",
    "format:check": "prettier --check \"frontend/**/*.{js,css,html}\" && npm run format:check:py",
    "format:check:py": "python -m black --check *.py --line-length=100",
    "quality": "npm run lint && npm run format:check",
    "start": "node start.js",
    "start:win": "start.bat",
    "start:ps": "powershell -ExecutionPolicy Bypass -File start.ps1",
    "start:unix": "chmod +x start.sh && ./start.sh"
  },
  "keywords": ["monitoramento", "cargas", "sompo", "seguros"],
  "author": "Equipe Sompo Dev",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "concurrently": "^8.2.2",
    "http-server": "^14.1.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsdoc": "^48.2.1",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "stylelint": "^15.11.0",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-order": "^6.0.4",
    "htmlhint": "^1.1.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
